package application;

public class Main {

	public static void main(String[] args) {
		
		
		System.out.println("Exercício 1: Soma de Dois Números");
		Integer a = 10;
		Integer b = 40;
		
		Integer sum = a + b;
		
		System.out.println(sum);
		
		System.out.println("***********************************************");
		
		System.out.println("Exercício 2: Verificar Número Par ou Ímpar");
		
		Integer evenOdd = 2;
		
		if(evenOdd % 2 == 0) {
			System.out.println("Even");
		} 
		else {
			System.out.println("Odd");
		}
		System.out.println("***********************************************");
		
	}

}
