package application;

public class Main {

	public static void main(String[] args) {
		
		
		
		
		System.out.println("***********************************************");
		
		System.out.println("Exercício 2: Verificar Número Par ou Ímpar");
		
		Integer evenOdd = 3;
		
		if(evenOdd % 2 == 0) {
			System.out.println("Even");
		} 
		else {
			System.out.println("Odd");
		}
		System.out.println("***********************************************");
		
	}

}
