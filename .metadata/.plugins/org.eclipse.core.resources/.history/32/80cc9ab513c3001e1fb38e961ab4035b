package application;

import java.util.Scanner;

public class SimpleInterest {

	public static void main(String[] args) {
		System.out.println("Exerc√≠cio 1: Juros Simples");
		
		Scanner sc = new Scanner(System.in);
		int numberOfInstallments, loan, amount, fee, tax;
		
		System.out.print("Type the value : ");
		loan = sc.nextInt();
		
		System.out.print("Type the monthly fee: ");
		fee = sc.nextInt();
		
		System.out.print("Type the number of installments: ");
		numberOfInstallments = sc.nextInt();
		
		tax = (fee/100) * loan;
		System.out.printf("%.2f",tax);
		fee *= numberOfInstallments;
		System.out.printf("%.2f", fee);
		amount = loan + fee;
		
		System.out.printf("%.2f", amount);

	}
}
